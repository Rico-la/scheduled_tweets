<h1>Sign in</h1>

<%= form_tag sign_in_path do |form| %>
   <div class="mb-3">
    <%= label_tag :email%>
    <%= text_field_tag :email %>
  </div>

  <div class="mb-3">
    <%= label_tag :password%>
    <%= password_field_tag :password %>
  </div>

   <div class="mb-3">
    <%= submit_tag "Sign In", class: "btn btn-primary"%>
  </div>
<% end %>